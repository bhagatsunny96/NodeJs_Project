<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <title>Employee Portal</title>
  </head>
  <body>
    <div class="container mt-3">
      <div class="row">
        <div class="col-md-12">
          <h2 class="text-center">Hey, <%= Email%></h2>
          <h1 class="text-center mb-3">Welcome to employee dashboard</h1>    
  
          <br>
  
          <table class="table">
            <thead class="thead-dark">
              <tr>
                <th scope="col">Id</th>
                <th scope="col">Employee Mail</th>
                <th scope="col">Password</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
  
              <%for(var i=0;i<Users.length;i++) {%>
                <tr>
                  <td><%= i+1%></td>
                  <td><%= Users[i].email%></td>
                  <% if(Users[i].email==Email) {%>
                    <td><%= Users[i].password%></td><% } %>
                  <% if(Users[i].email!=Email){ %> 
                    <td>-----------------</td><% } %>
                  <td><%= Users[i].firstname%></td>
                  <td><%= Users[i].lastname%></td>
                  <% if(Users[i].email==Email) {%>
                  <td><a class="delete"data-id=<%= Users[i]._id %>  style="color:red; text-decoration:none" href="index.html">Delete </a>/  
                    <a style="color:blue; text-decoration:none" href="update?id=<%= Users[i].id%>">Edit</a>
                  </td><% } %> 
                </tr>
              <%}%>
            </tbody>
          </table>
          <div class="container text-center">
            <a href="registration.html" class="btn btn-outline-success">Add
              Employee</a>
          </div>

          <div class="text-center">---------------------------</div>
          <div class="text-center">
            <a href="index.html" class="btn btn-outline-primary">Sign out</a>
          </div>
          
          <div class="text-center">---------------------------</div>

        </div>
      </div>
    </div>
    <script>
      let del = document.getElementById("delete");
      del.addEventListener("click",(event)=>{
          
      })
    </script>
  </body>
</html>